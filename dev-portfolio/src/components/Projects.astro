---
import AstroFr from "./icons/AstroFr.astro";
import Tailwind from "./icons/Tailwind.astro";
const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: AstroFr,
  },
  TALWIND: {
    name: "Tailwind CSS",
    class: "bg-black text-[#73bcf6]",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Project 1",
    description: "This is a description of project 1",
    link: "#",
    github: "#",
    image: "/projects/TestImage.webp",
    tags: [TAGS.ASTRO, TAGS.TALWIND],
  },
  {
    title: "Project 2",
    description: "This is a description of project 2",
    link: "#",
    github: "#",
    image: "/projects/TestImage.webp",
    tags: [TAGS.ASTRO, TAGS.TALWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-3xl font-semibold text-green-200">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-4">
        {tags.map((tag) => (
          <li>
            <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}>
              <tag.icon class="size-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10 mb-14"
        src={image}
        alt={`Capura de pantalla del proyecto`}
      />
    </article>
  ))
}
